                    <ul class="detail_info">
                      <li class="item"><%= fa_icon("calendar") %>設立年</li>
                      <li class="item"><%= simple_format(@product.c_established_year) %></li>
                    </ul>
                    <ul class="detail_info">
                      <li class="item"><%= fa_icon("users") %>社員数</li>
                      <li class="item"><%= @product.c_employees_number %>名</li>
                    </ul>
                    <ul class="detail_info">
                      <li class="item"><%= fa_icon("flag") %>国</li>
                      <li class="item"><%= simple_format(@product.c_country) %></li>
                    </ul>
                   <% if @product.c_city.present? %>
                    <ul class="detail_info">
                      <li class="item"><%= fa_icon("university") %>都市</li>
                      <li class="item"><%= simple_format(@product.c_city) %></li>
                    </ul>
                   <% else %>
                   <% end %>
