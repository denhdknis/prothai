                    <ul class="detail_info">
                      <li class="item"><%= fa_icon("language") %>使用言語の割合</li>
                      <li class="item"><%= simple_format(@product.c_language_used_ratio) %></li>
                    </ul>
                    <ul class="detail_info">
                      <li class="item"><%= fa_icon("dollar-sign") %>手当</li>
                      <li class="item"><%= simple_format(@product.c_salary) %></li>
                    </ul>
                    <ul class="detail_info">
                      <li class="item"><%= fa_icon("clock") %>インターンシップ期間</li>
                      <li class="item"><%= @periods[@product.c_period.to_i] %></li>
                    </ul>
                    <ul class="detail_info">
                      <li class="item"><%= fa_icon("calendar-alt") %>インターンシップ日数、時間</li>
                      <li class="item"><%= simple_format(@product.c_time) %></li>
                    </ul>
                   </div>
              </div>
