<div class="container all_top">
    <!--Grid row-->
    <div class="row word_color">
        <div class="col-lg-9">
        <h2 class="head_line">
         <i class=""></i><%= simple_format(@product.c_title) %>
        </h2>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <!-- インジケータの設定 -->
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <% if @product.slider_photo4.present? %>
          <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        <% else %>
        <% end %>
        <% if @product.slider_photo5.present? %>
          <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
        <% else %>
        <% end %>
        <% if @product.slider_photo6.present? %>
          <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
        <% else %>
        <% end %>
        <% if @product.slider_photo7.present? %>
          <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
        <% else %>
        <% end %>
        </ol>
      <!-- スライドさせる画像の設定 -->
        <div class="carousel-inner">
                <div class="carousel-item active">
                  <div><a href="#"><img class="d-block w-100" src="<%= @product.slider_photo1 %>" ></a></div>
                </div><!-- /.carousel-item -->
                <div class="carousel-item">
                  <div><a href="#"><img class="d-block w-100" src="<%= @product.slider_photo2 %>" ></a></div>
                </div><!-- /.carousel-item -->
                <div class="carousel-item">
                   <div><a href="#"><img class="d-block w-100" src="<%= @product.slider_photo3 %>" ></a></div>
                </div><!-- /.carousel-item -->
             <% if @product.slider_photo4.present? %>
                <div class="carousel-item">
                   <div><a href="#"><img class="d-block w-100" src="<%= @product.slider_photo4 %>" ></a></div>
                </div><!-- /.carousel-item -->
             <% else %>
             <% end %>
             <% if @product.slider_photo5.present? %>
                <div class="carousel-item">
                   <div><a href="#"><img class="d-block w-100" src="<%= @product.slider_photo5 %>" ></a></div>
                </div><!-- /.carousel-item -->
             <% else %>
             <% end %>
             <% if @product.slider_photo6.present? %>
                <div class="carousel-item">
                   <div><a href="#"><img class="d-block w-100" src="<%= @product.slider_photo6 %>" ></a></div>
                </div><!-- /.carousel-item -->
             <% else %>
             <% end %>
             <% if @product.slider_photo7.present? %>
                <div class="carousel-item">
                   <div><a href="#"><img class="d-block w-100" src="<%= @product.slider_photo7 %>" ></a></div>
                </div><!-- /.carousel-item -->
             <% else %>
             <% end %>
        </div><!-- /.carousel-inner -->
      <!-- スライドコントロールの設定 -->
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">前へ</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">次へ</span>
        </a>
    </div>
        <div class="white-content content_box">
         <%= simple_format(@product.c_catch_copy) %>
        </div>
        <ul class="nav border_bottom">
         <% @connect_tags.each.with_index(1) do |connect,i| %>
            <li class="nav-item tag_zone">
              <a class="nav-link" href="#"><%= i %>.<%= connect.tag.name %></a>
            </li>
            <% end %>
          </ul>
