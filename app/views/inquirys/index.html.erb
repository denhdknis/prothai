<main class="mt-2">
  <!--Main container-->
  <div class="container">
  <!--Grid row-->
 <%= form_for @inquiry, :url => inquirys_confirm_path do |f| %>
  <div class="page-header">
    <h1><strong>お問い合わせ</strong></h1>
  </div>
    <div class="form-group">
      <label for="exampleInputEmail1">お名前</label>
      <span class="text-danger">（必須）</span>
      <%= f.text_field :name, :class => 'form-control',:placeholder => "お名前を入力してください"%>
    </div>


    <div class="form-group">
      <label for="exampleInputEmail1">Eメールアドレス</label>
      <span class="text-danger">（必須）</span>
      <%= f.text_field :email, :class => 'form-control' ,:placeholder => "Eメールアドレスを入力してください" %>
      <small class="text-muted">あなたのEメールアドレスは他の誰とも共有しません。</small>
    </div>


    <div class="form-group">
      <label for="exampleInputEmail1">電話番号</label>
      <span class="text-danger">（必須）</span>
      <%= f.text_field :phone, :class => 'form-control' ,:placeholder => "電話番号を入力してください"%>
        <small class="text-muted">あなたの電話番号は他の誰とも共有しません。</small>
    </div>

    <div class="form-group">
      <label for="exampleFormControlTextarea1"">お問い合わせ内容</label>
      <%= f.text_area :message, :class => 'form-control' ,:placeholder => "お問い合わせ内容を入力してください" ,:rows => "8"%>
    </div>


  <%= f.submit '確認', class: 'btn btn-primary btn-lg btn-block' %>
<% end %>

 </div>
</main>