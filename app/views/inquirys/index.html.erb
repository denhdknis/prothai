<main class="mt-2 all_top">
  <!--Main container-->
  <div class="container">
  <!--Grid row-->
 <%= form_for @inquiry, html: {id: 'form_id', class: 'was-validated'}, :url => inquirys_confirm_path ,novalidate: true do |f| %>
  <div class="page-header">
    <h1><strong><i class="fal fa-user-headset"></i></i>お問い合わせ</strong></h1>
  </div>
    <div class="form-group">
      <label for="exampleInputEmail1">お名前</label>
      <span class="text-danger">（必須）</span>
      <%= f.text_field :name, :class => 'form-control validate[required]',:id => 'validationCustom01',:placeholder => "お名前を入力してください",required: true %>
     <small class="text-muted">あなたの名前は他の誰とも共有しません。</small>
    </div>


    <div class="form-group">
      <label for="exampleInputEmail1">Eメールアドレス</label>
      <span class="text-danger">（必須）</span>
      <%= f.text_field :email, :class => 'form-control' ,:placeholder => "Eメールアドレスを入力してください",required: true%>
      <small class="text-muted">あなたのEメールアドレスは他の誰とも共有しません。</small>
    </div>



    <div class="form-group">
      <label for="exampleInputEmail1">電話番号</label>
      <span class="text-danger">（必須）</span>
      <%= f.text_field :phone, :class => 'form-control' ,:placeholder => "電話番号を入力してください",required: true%>
        <small class="text-muted">あなたの電話番号は他の誰とも共有しません。</small>
    </div>

    <div class="form-group">
      <label for="exampleFormControlTextarea1"">お問い合わせ内容</label>
      <%= f.text_area :message, :class => 'form-control' ,:placeholder => "お問い合わせ内容を入力してください" ,:rows => "8",required: true%>
    </div>


  <strong><%= f.submit '確認', class: 'btn btn-lg btn-block send_bottom' %></strong>
<% end %>

 </div>
</main>